generator client {
  provider = "prisma-client-js"
}

// Database connection
datasource db {
  provider = "postgresql"
}

// School model
model School {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  address   String?
  phone     String?
  students  Student[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Student model
model Student {
  id       String @id @default(uuid())
  name     String
  schoolId String
  school   School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
}
